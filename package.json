{
  "name": "fortudo",
  "version": "1.0.0",
  "description": "A daily time-blocking to-do app",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "lint": "eslint public/js/**/*.js __tests__/**/*.js",
    "lint:fix": "eslint public/js/**/*.js __tests__/**/*.js --fix",
    "format": "prettier --write \"public/js/**/*.js\" \"__tests__/**/*.js\" \"*.js\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"public/js/**/*.js\" \"__tests__/**/*.js\" \"*.js\" \"*.json\" \"*.md\"",
    "lint:format": "npm run lint:fix && npm run format",
    "check": "npm run lint && npm run format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iconix/fortudo.git"
  },
  "keywords": [
    "to-do",
    "time-blocking",
    "daily",
    "webapp"
  ],
  "author": "iconix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iconix/fortudo/issues"
  },
  "homepage": "https://github.com/iconix/fortudo#readme",
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@testing-library/dom": "^10.4.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.8.0"
  }
}
